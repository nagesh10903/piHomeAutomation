<% layout('layoutb') -%>

<div class="col-sm-6 col-sm-offset-3">

	<h1><span class="fa fa-sign-in"></span>Add Category</h1>

	<!-- show any messages that come back with authentication -->
	<% if (message.length > 0) { %>
		<div class="alert alert-danger"><%= message %></div>
	<% } %>

	<!-- Add Types/Category/Modes FORM -->
	<form class="form-horizontal" action="/addcatetype" method="post">
		  <div class="form-group">
			<label class="control-label col-xs-3">Add</label>
		      <div class="col-xs-5">	
			<select class="form-control" name="type">
                         <option> Type </option>
			 <option> Category </option>
                      	  <option> Mode </option>
			</select> 
		      </div>
		</div>
		<div class="form-group">
			<label class="control-label col-xs-3">For</label>
		  <div class="col-xs-5">	
			<select class="form-control" name="type">
                         <option> User </option>
			 <option> Lawn </option>
                      	  <option> Device </option>
			</select> 
		  </div>
		</div>
		<div class="form-group">
			<label class="control-label col-xs-3">Name</label>
		   <div class="col-xs-5">	
			<input type="text" class="form-control" name="area">
		     </div>
		   </div>
		<div class="form-group">
			<label class="control-label col-xs-3">ID</label>
			<div class="col-xs-5">
			<input type="text" class="form-control" name="location">
		        </div>
		</div>
		<div class="col-xs-offset-3 col-xs-3">
		<button type="submit" class="btn btn-warning btn-lg">Add</button>
	        </div>
	 </form>
	<hr>
</div>

