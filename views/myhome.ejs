<% layout('layout') -%>

<div class="table-responsive">
    <table id="table-cluster" class="table table-striped">
            <thead>
                <th>#</th>
                <th>User</th>
                <th>Department</th>
            </thead>
            <tbody>
                <tr><td>001</td><td>John Smith</td><td>IT</td></tr>
                <tr><td>002</td><td>Mark Johnson</td><td>HD</td></tr>
            </tbody>
    </table>
</div>


  <%  var loc= JSON.parse(devlocs);
    for(var i in loc) {   %>

<div style="float: left; border: 3px solid; margin: 30px; padding: 10px;font:italic 12px verdana">
    <div>Room :<%= loc[i].location %></div>

    <div style="border:1px solid green">
     <%  var dev= JSON.parse(loc[i].devices);
	 for(var i in dev) {   %>
            <span> <%=dev[i].type %> : <%=dev[i].value1 %>/<%= dev[i].value2 %>  </span>
           <%  } %>
</div>
 <%  var dev= JSON.parse(loc[i].devices);
	 for(var i in dev) {  
       var uhrs = "";
       if (dev[i].value1 == "ON") { uhrs = "Hrs"; }
	     %>
        <div style="border:1px solid blue">
            <span><%= dev[i].dtype %> :<%=dev[i].value1 %> | <%=dev[i].value2 %> <%= uhrs %> </span>
        </div>
   <% } %>
 </div>

 <% } %>
