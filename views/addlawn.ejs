<% layout('layoutb') -%>

<div class="col-sm-6 col-sm-offset-3">

	<h1><span class="fa fa-sign-in"></span>Add Lawn</h1>

	<!-- show any messages that come back with authentication -->
	<% if (message.length > 0) { %>
		<div class="alert alert-danger"><%= message %></div>
	<% } %>

	<!-- Add Lawn FORM -->
	<form class="form-horizontal" action="/addlawn" method="post">
		<div class="form-group">
			<label class="control-label col-xs-3">Name</label>
			<div class="col-xs-5">
			<input type="text" class="form-control" name="name">
		        </div>
		</div>
		<div class="form-group">
			<label class="control-label col-xs-3">Floor</label>
			<div class="col-xs-5">
			<input type="text" class="form-control" name="floor">
		        </div>
		</div>
		<div class="form-group">
			<label class="control-label col-xs-3">Area</label>
			<div class="col-xs-5">
			<input type="text" class="form-control" name="area">
		        </div>
		</div>
		<div class="form-group">
			<label class="control-label col-xs-3">Location</label>
			<div class="col-xs-5">
			<input type="text" class="form-control" name="location">
		        </div>
		</div>
		<div class="form-group">
			<label class="control-label col-xs-3">GeoLocation</label>
			<div class="col-xs-5">
			<input type="text" class="form-control" name="geolocation">
		        </div>
		</div>
		<div class="form-group">
			<label class="control-label col-xs-3">Type</label>
			<div class="col-xs-5">
			<select class="form-control" name="type">
                        <% for(var i=0;i<usertype.length;i++) { %>
                         <option> <%=usertype[i].type %> </option>
                        <% } %>
			</select>
		        </div>  
		</div>
			<div class="col-xs-5">
		<button type="submit" class="btn btn-warning btn-lg">AddLawn</button>
			</div>
	</form>
	<hr>
</div>

