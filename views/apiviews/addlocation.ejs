<% layout('apilayout') -%>
<div class="col-sm-5 col-sm-offset-1">

	<h1><span class="fa fa-sign-in"></span>Add Location</h1>
 
	<!-- show any messages that come back with authentication -->
	

	<!-- Add Location FORM -->
	<form class="form-horizontal" action="#" method="post">
		<div class="form-group">
			<label class="control-label col-md-2">Name</label>
			<div  class="col-md-6">
			<input type="text" class="form-control" name="name" id="name">
			</div>
		</div>
		<div class="form-group">
			<label class="control-label col-md-2">Building</label>
			<div  class="col-md-6">
			<input type="text" class="form-control" name="building" id="building">
			</div>
		</div>
		<div class="form-group">
			<label class="control-label col-md-2">Street</label>
			<div  class="col-md-6">
			<input type="text" class="form-control" name="street" id="street">
			</div>
		</div>
		<div class="form-group">
			<label class="control-label col-md-2">Location</label>
			<div  class="col-md-6">
			<input type="text" class="form-control" name="location" id="location">
			</div>
		</div>
		<div class="form-group">
			<label class="control-label col-md-2">City</label>
			<div  class="col-md-6">
			<input type="text" class="form-control" name="city">
			</div>	
		</div>
		<div class="form-group">
			<label class="control-label col-md-2">PIN</label>
			<div  class="col-md-6">	
			<input type="text" class="form-control" name="zip">
			</div>
		</div>
		<div class="form-group">
			<label class="control-label col-md-2">State</label>
			<div  class="col-md-6">
			<input type="text" class="form-control" name="state">
			</div>
		</div>
		<div class="form-group">
			<label class="control-label col-md-2">GeoLocation</label>
			<div  class="col-md-6">
			<input type="text" class="form-control" name="geolocation">
			</div>		
		</div>
		<div class="form-group">
			<label class="control-label col-md-2">Type</label>
			<div  class="col-md-6">
			<select class="form-control" name="type">
                        <option> Room</option>
                         <option> Lawn</option>
                         <option> Field</option>
			 <option> Ground</option>
			</select>  
			</div>
		</div>
		      <div  class="col-md-2 col-md-offset-2">
		        <button type="submit" id="addlocation"  class="btn btn-warning btn-lg col-sm-offset-2">AddLocation</button>
                      </div>
	</form>
	<hr>
</div>
<script type="text/javascript">
  var user=$('#user').val(), pass=$('#pass').val();
  $('addlocation').bind('click', function() {
  alert('submit');
    $.ajax('/apilocation', {
      type: 'POST',
      contentType: 'text/json',
      data: JSON.stringify({name:name,type:type,location:{building:building,City:city,
			ZIP:zip,street:street,location:location,geolocation:geolocation,state:state}}),
      complete: function() { /* Do something with the response. */ }
    });
    return false; // Prevent form submit.
  });
</script>
